################################################################################
PREFIX ?= $(HOME)/.
FILES = bashrc inputrc

################################################################################
.PHONEY: install uninstall

################################################################################
define INSTALL
install: $(PREFIX)$(1)
uninstall::
	rm -f $(PREFIX)$(1)
$(PREFIX)$(1): $(1)
	@ mkdir -p $(dir $$@)
	install -m 0640 $$< $$@
endef

################################################################################
$(foreach f,$(FILES),$(eval $(call INSTALL,$(f))))
